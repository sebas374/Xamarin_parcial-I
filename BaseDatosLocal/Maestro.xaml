            <Button Text="Productos"
                    Clicked="IrPagina2"
                    BackgroundColor="#FF2597F5"
                    BorderRadius="20"
                    BorderColor="Black"
                    TextColor="White"/>
                        
                    <Button Text="Informacion"
                    Clicked="IrPagina3"
                    BackgroundColor="#FF2597F5"
                    BorderRadius="20"
                    BorderColor="Black"
                    TextColor="White"/>
